<div class="container d-flex justify-content-center">
<h1 class="text-center">Please Enter your Information</h1>
<br>
@model User
<form asp-action="Create" asp-controller="Home" method="post">
    <span style="color: red;" asp-validation-for="FName"></span>
  <div class="form-group row">
    <label asp-for="FName" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="FName" class="form-control-plaintext">
    </div>
  </div>
  <span style="color: red;"  asp-validation-for="LName"></span>
  <div class="form-group row">
    <label asp-for="LName" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="LName" class="form-control-plaintext">
    </div>
  </div>
  <span style="color: red;"  asp-validation-for="Age"></span>
  <div class="form-group row">
    <label asp-for="Age" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Age" class="form-control-plaintext">
    </div>
  </div>
  <span style="color: red;"  asp-validation-for="Email"></span>
  <div class="form-group row">
    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Email" class="form-control-plaintext">
    </div>
  </div>
  <span style="color: red;"  asp-validation-for="Password"></span>
  <div class="form-group row">
    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Password" class="form-control-plaintext">
    </div>
  </div>
  <input type="submit" class="btn btn-primary" value="Create user">
</form>
</div>